-- CASO 1 GUIA 1 PRACTICANDO --
SELECT TO_CHAR(NUMRUN_CLI) || '-' || DVRUN_CLI AS "RUN CLIENTE",
LOWER(PNOMBRE_CLI) || ' ' ||INITCAP(SNOMBRE_CLI) || ' ' || APPATERNO_CLI || ' ' || APMATERNO_CLI AS "NOMBRE COMPLETO CLIENTE",
FECHA_NAC_CLI AS "FECHA NACIMIENTO"
FROM CLIENTE
WHERE TO_CHAR(SYSDATE +1,'dd/mm')=TO_CHAR(FECHA_NAC_CLI,'dd/mm');


--(NEXT_DAY(FECHA_NAC_CLI,1)) "FECHA NACIMIENTO"--|

-- FIN CASO 1 GUIA 1 PRACTICANDO --

-- CASO 2 GUIA 1 PRACTICANDO --

SELECT NUMRUN_EMP || ' ' || DVRUN_EMP AS "RUN EMPLEADO",
PNOMBRE_EMP || ' ' || SNOMBRE_EMP || ' ' || APPATERNO_EMP || ' ' || APMATERNO_EMP AS "NOMBRE COMPLETO EMPLEADO",
SUELDO_BASE AS "SUELDO BASE",
TRUNC(SUELDO_BASE/100000) AS "PORCENTAJE MOVILIZACIÓN",
ROUND(SUELDO_BASE *TRUNC(SUELDO_BASE/100000)/100) AS "VALOR MOVILIZACIÓN"
FROM EMPLEADO
ORDER BY "PORCENTAJE MOVILIZACIÓN" DESC;
-- FIN CASO 2 GUIA 1 PRACTICANDO --

-- CASO 3 GUIA 1 PRACTICANDO --

SELECT NUMRUN_EMP || ' ' || DVRUN_EMP AS "RUN EMPLEADO",
PNOMBRE_EMP || ' ' || SNOMBRE_EMP || ' ' || APPATERNO_EMP || ' ' || APMATERNO_EMP AS "NOMBRE COMPLETO EMPLEADO",
SUELDO_BASE AS "SUELDO BASE",
FECHA_NAC AS "FECHA NACIMIENTO",
SUBSTR(PNOMBRE_EMP,1,3) || LENGTH(PNOMBRE_EMP)|| '*' || SUBSTR(SUELDO_BASE,-1) ||DVRUN_EMP || ROUND(MONTHS_BETWEEN(SYSDATE,FECHA_CONTRATO)/12) AS "NOMBRE USUARIO",
SUBSTR(NUMRUN_EMP,3,1) || TO_CHAR(ADD_MONTHS(FECHA_CONTRATO,24),'YYYY') || SUBSTR(SUELDO_BASE-1,-3,3) || SUBSTR(APPATERNO_EMP,-2,2) || EXTRACT (MONTH FROM SYSDATE)
FROM EMPLEADO
ORDER BY APPATERNO_EMP;
-- FIN CASO 3 GUIA 1 PRACTICANDO --

-- CASO 4 GUIA 1 PRACTICANDO --

SELECT EXTRACT(YEAR FROM SYSDATE),NRO_PATENTE,
VALOR_ARRIENDO_DIA AS "VALOR_ARRIENDO_DIA_SR", 
NVL (VALOR_GARANTIA_DIA,0) AS "VALOR_GARANTIA_DIA_SR",
EXTRACT(YEAR FROM SYSDATE)- ANIO AS "ANNOS_ANTIGUEDAD",
VALOR_ARRIENDO_DIA-(VALOR_ARRIENDO_DIA * (EXTRACT(YEAR FROM SYSDATE)- ANIO)/100) AS "VALOR_ARRIENDO_DIA_CR",
VALOR_GARANTIA_DIA-(VALOR_GARANTIA_DIA * (EXTRACT(YEAR FROM SYSDATE)- ANIO)/100) AS "VALOR_GARANTIA_DIA_CR"
FROM CAMION
WHERE EXTRACT(YEAR FROM SYSDATE)- ANIO>5;

-- FIN CASO 4 GUIA 1 PRACTICANDO --

